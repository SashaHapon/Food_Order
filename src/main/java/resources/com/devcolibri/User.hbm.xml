<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.order.model.Account" table="account" catalog="mydb">
        <id name="id" type="java.lang.Long">
            <column name="idAccount" />
        </id>
        <property name="accountName" type="string">
            <column name="accountName" length="20" not-null="false" unique="false" />
        </property>
        <property name="phoneNumber" type="string">
            <column name="phoneNumber" length="20" not-null="false" unique="false" />
        </property>
    </class>
</hibernate-mapping>